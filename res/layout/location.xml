<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:minWidth="200dip"
	android:id="@+id/layoutLocation">
    <RelativeLayout android:id="@+id/layoutLocation" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout1" android:layout_alignParentRight="true" android:layout_height="wrap_content" android:paddingLeft="2pt" android:paddingRight="10dip" android:layout_width="fill_parent" android:layout_below="@+id/lblLocation">
            <AutoCompleteTextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:enabled="true" android:visibility="visible" android:paddingRight="10dip" android:layout_weight="3" android:id="@+id/txtZip" android:minWidth="40dip" android:singleLine="true">
                <requestFocus></requestFocus>
            </AutoCompleteTextView>
            <CheckBox android:layout_width="fill_parent" android:text="@string/btn_gps" android:singleLine="true" android:layout_height="wrap_content" android:checked="false" android:layout_weight="4" android:id="@+id/btnGPS"></CheckBox>
        </LinearLayout>
        <Button android:id="@+id/btnSelectLocation" android:text="@string/btn_select"
        	android:layout_below="@+id/linearLayout1"
        	android:layout_height="wrap_content" android:layout_width="match_parent"/>
    </RelativeLayout>
</LinearLayout>