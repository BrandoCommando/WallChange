<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout android:id="@+id/find_dialog"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:gravity="center" android:orientation="vertical"
		>
	    <TextView android:id="@+id/find_status"
	    	android:text="Searching for files: 0 found" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			/>
		<TextView android:id="@+id/find_path"
			android:text="/mnt/sdcard/" android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			/>
		<Button android:id="@+id/find_stop"
			android:text="Stop"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			/>
	</LinearLayout>
	<GridView android:id="@+id/find_grid"
		android:numColumns="auto_fit"
		android:verticalSpacing="2dp"
		android:gravity="center"
		android:stretchMode="columnWidth"
		android:columnWidth="90dp"
		android:horizontalSpacing="2dp"
		android:layout_width="match_parent" android:layout_height="match_parent"
		/>
</RelativeLayout>
